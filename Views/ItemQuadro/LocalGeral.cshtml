
<form asp-action="LocalGeralCreate">
    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                

        <div class="form-group">
            <label class="col-md-4 control-label">Local</label>
            <div class="col-md-4">
                <select id="LocalId" name="LocalId" class="form-control">
                    @foreach (var item in ViewBag.Local){                                              
                        <option value="@item.Id">@item.Nome</option>
                    }                                         
                </select>  
            </div>
        </div>  

        <div class="form-group">
            <label class="col-md-4 control-label">Quantas vezes deseja adicionar o local acima?</label>
            <div class="col-md-4">
                <input type="number" value="1" id="quantidade" name="quantidade"/>
            </div>
        </div>                    
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>          
        </div>
    </div>
</form>

