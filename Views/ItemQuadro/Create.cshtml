@model ProjetoEscala.Models.ItemQuadro


<form asp-action="CreateSave">
    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                

        <div class="form-group">
            <label class="col-md-2 control-label">Local</label>
            <div class="col-md-3">
                <select asp-for="LocalId" class="form-control">
                    @foreach (var item in ViewBag.Local){                                              
                        <option value="@item.Id">@item.Nome</option>
                    }                                         
                </select>  
            </div>
        </div>    

        <div class="form-group">
            <label class="col-md-2 control-label">Pessoa</label>
            <div class="col-md-3">
                <select asp-for="PessoaId" class="form-control">
                    @foreach (var item in ViewBag.Pessoa){                                              
                        <option value="@item.Id">@item.Nome</option>
                    }                                         
                </select>  
            </div>
        </div> 

        <input type="hidden" id="QuadroId" name="QuadroId" value="@ViewBag.QuadroId" />         
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

