@model ProjetoEscala.Models.Quadro


<form asp-action="Create">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-md-2 control-label">Escala</label>
            <div class="col-md-3">
                <select asp-for="EscalaId" class="form-control">
                    @foreach (var item in ViewBag.Escala){                                              
                        <option value="@item.Id">@item.Mes</option>
                    }                                         
                </select>  
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Data</label>
            <div class="col-md-3">                
                <input type="date" asp-for="Data" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Evento</label>
            <div class="col-md-3">                
                <select id="EventoId" name="EventoId" class="form-control">
                    @foreach (var item in ViewBag.Evento){                                              
                        <option value="@item.Id">@item.Nome</option>
                    }                                         
                </select>  
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


