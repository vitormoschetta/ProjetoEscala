@using Microsoft.AspNetCore.Http;

<form asp-action="CreateTodosDias">

    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <label class="col-md-2 control-label">Escala</label>
                    <div>
                        <select id="EscalaId" name="EscalaId" class="form-control">
                            @foreach (var item in ViewBag.Escala){
                                if (item.Id == Context.Session.GetInt32("Escala_Mes")){
                                    <option value="@item.Id" selected>@item.Nome</option>
                                }         
                                else{
                                    <option value="@item.Id">@item.Nome</option>
                                }                                     
                                
                            }                                         
                        </select>  
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Evento</label>
                    <div>                
                        <select id="EventoId" name="EventoId" class="form-control">
                            @foreach (var item in ViewBag.Evento){                                              
                                <option value="@item.Id">@item.Nome</option>
                            }                                         
                        </select>  
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Data</label>
                    <div>                
                        <input type="date" id="dataInicial" name="dataInicial" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Data</label>
                    <div>                
                        <input type="date" id="dataFinal" name="dataFinal" class="form-control"/>
                    </div>
                </div>

            </div>            

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


